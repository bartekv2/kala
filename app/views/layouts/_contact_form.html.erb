<%= render partial: "layouts/flash" %>
<div class="flex justify-center text-left md:justify-start">
  <div id="contact-form" class="w-full max-w-xs<% if @success %> hidden<% end %>">
    <%= simple_form_for @contact, url: contacts_path, :html => {:class => 'pt-1'} do |f| %>
      <div>
        <%= f.input :name, label: t('name'), :input_html => { :class => "shadow appearance-none border rounded w-full py-1 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
        <%= f.input :email, label: t('email'), :input_html => { :class => "shadow appearance-none border rounded w-full py-1 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
        <%= f.input :message, label: t('message'), as: :text, :input_html => { :rows => 8, :class => "shadow appearance-none border rounded w-full py-1 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: t("enter_your_message")} %>
        <div class= "hidden">
          <%= f.input :nickname %>
        </div>
        <%= f.submit t("send"), class: 'cursor-pointer bg-kalalight hover:text-teal-500 text-kaladark font-bold mt-3 py-1 px-3 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>
